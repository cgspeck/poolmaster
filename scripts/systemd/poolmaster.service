[Unit]
Description=Poolmaster container
Requires=docker.service
After=docker.service

[Service]
Restart=always
ExecStartPre=-/usr/bin/docker rm poolmaster
ExecStart=/usr/bin/docker run --env-file /etc/poolmaster/poolmaster.conf --rm --name poolmaster -p 8000:8000 poolmaster
ExecStop=-/usr/bin/docker stop -t 2 poolmaster

[Install]
WantedBy=default.target
