[Unit]
Description=Poolmaster container
Requires=docker.service
After=docker.service

[Service]
Restart=always
ExecStart=/usr/bin/docker run --expose 8000 --env-file /etc/poolmaster/poolmaster.conf --name poolmaster /usr/src/app/scripts/run_server.sh
ExecStop=/usr/bin/docker stop -t 2 poolmaster
ExecStopPost=/usr/bin/docker rm -f poolmaster

[Install]
WantedBy=default.target
